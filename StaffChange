package SMTravelSimulation;
import simulationModelling.ScheduledAction;
/*
 * Scheduled action: StaffCahnge
 */
class StaffChange extends ScheduledAction {
	
	SMTravel model;  // reference to model object

	private double[] staffChangeTimeSeq = {0,3600,7200,10800,14400,28800,32400,36000,39600,43200,-1};
	private int sctIx = 0;
	
	// added for the initialise actions in SMTravel class
	public StaffChange(SMTravel model) {
		// TODO Auto-generated constructor stub
		model = this.model;
	}

	public double timeSequence() { 
		double nxtTime = staffChangeTimeSeq[sctIx];
		sctIx++;
		return(nxtTime); 
	}

	protected void actionEvent()
	{
	    int x = 1;

// ON work
	    if(model.getClock() == staffChangeTimeSeq[0]) {
			model.rgOperator[Constants.REGULAR].uNumOperators = model.rgOperator[Constants.REGULAR].uShift[0];
			model.rgOperator[Constants.SILVER].uNumOperators = model.rgOperator[Constants.SILVER].uShift[0];
			model.rgOperator[Constants.GOLD].uNumOperators = model.rgOperator[Constants.GOLD].uShift[0];
		}
	    else if(model.getClock() == staffChangeTimeSeq[1]) {
	    		model.rgOperator[Constants.REGULAR].uNumOperators += model.rgOperator[Constants.REGULAR].uShift[1];
			model.rgOperator[Constants.SILVER].uNumOperators += model.rgOperator[Constants.SILVER].uShift[1];
			model.rgOperator[Constants.GOLD].uNumOperators += model.rgOperator[Constants.GOLD].uShift[1];
	    }
	    else if(model.getClock() == staffChangeTimeSeq[2]) {
	    		model.rgOperator[Constants.REGULAR].uNumOperators += model.rgOperator[Constants.REGULAR].uShift[2];
			model.rgOperator[Constants.SILVER].uNumOperators += model.rgOperator[Constants.SILVER].uShift[2];
			model.rgOperator[Constants.GOLD].uNumOperators += model.rgOperator[Constants.GOLD].uShift[2];
	    }
	    else if(model.getClock() == staffChangeTimeSeq[3]) {
	    		model.rgOperator[Constants.REGULAR].uNumOperators += model.rgOperator[Constants.REGULAR].uShift[3];
			model.rgOperator[Constants.SILVER].uNumOperators += model.rgOperator[Constants.SILVER].uShift[3];
			model.rgOperator[Constants.GOLD].uNumOperators += model.rgOperator[Constants.GOLD].uShift[3];
	    }
	    else if(model.getClock() == staffChangeTimeSeq[4]) {
	    		model.rgOperator[Constants.REGULAR].uNumOperators += model.rgOperator[Constants.REGULAR].uShift[4];
			model.rgOperator[Constants.SILVER].uNumOperators += model.rgOperator[Constants.SILVER].uShift[4];
			model.rgOperator[Constants.GOLD].uNumOperators += model.rgOperator[Constants.GOLD].uShift[4];
	    }
	    
// OFF work
	    
	    else if(model.getClock() == staffChangeTimeSeq[5]) {
	    		model.rgOperator[Constants.REGULAR].uNumOperators -= model.rgOperator[Constants.REGULAR].uShift[0];
			model.rgOperator[Constants.SILVER].uNumOperators -= model.rgOperator[Constants.SILVER].uShift[0];
			model.rgOperator[Constants.GOLD].uNumOperators -= model.rgOperator[Constants.GOLD].uShift[0];
	    }
	    else if(model.getClock() == staffChangeTimeSeq[6]) {
	    		model.rgOperator[Constants.REGULAR].uNumOperators -= model.rgOperator[Constants.REGULAR].uShift[1];
			model.rgOperator[Constants.SILVER].uNumOperators -= model.rgOperator[Constants.SILVER].uShift[1];
			model.rgOperator[Constants.GOLD].uNumOperators -= model.rgOperator[Constants.GOLD].uShift[1];
	    }
	    else if(model.getClock() == staffChangeTimeSeq[7]) {
	    		model.rgOperator[Constants.REGULAR].uNumOperators -= model.rgOperator[Constants.REGULAR].uShift[2];
			model.rgOperator[Constants.SILVER].uNumOperators -= model.rgOperator[Constants.SILVER].uShift[2];
			model.rgOperator[Constants.GOLD].uNumOperators -= model.rgOperator[Constants.GOLD].uShift[2];
	    }
	    else if(model.getClock() == staffChangeTimeSeq[8]) {
	    		model.rgOperator[Constants.REGULAR].uNumOperators -= model.rgOperator[Constants.REGULAR].uShift[3];
			model.rgOperator[Constants.SILVER].uNumOperators -= model.rgOperator[Constants.SILVER].uShift[3];
			model.rgOperator[Constants.GOLD].uNumOperators -= model.rgOperator[Constants.GOLD].uShift[3];
	    }
	    else if(model.getClock() == staffChangeTimeSeq[9]) {
	    		model.rgOperator[Constants.REGULAR].uNumOperators -= model.rgOperator[Constants.REGULAR].uShift[4];
			model.rgOperator[Constants.SILVER].uNumOperators -= model.rgOperator[Constants.SILVER].uShift[4];
			model.rgOperator[Constants.GOLD].uNumOperators -= model.rgOperator[Constants.GOLD].uShift[4];
	    }
		
	    else System.out.println("Invalid time to schedule employees:"+model.getClock());
	}

}
